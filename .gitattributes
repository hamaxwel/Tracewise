# Normalize all text files to use LF
* text=auto eol=lf

# Set specific rules for code files
*.ts     text eol=lf
*.tsx    text eol=lf
*.js     text eol=lf
*.jsx    text eol=lf
*.css    text eol=lf
*.html   text eol=lf
*.json   text eol=lf
*.md     text eol=lf

# Prevent line ending conversion on lock files
package-lock.json -text
yarn.lock         -text
pnpm-lock.yaml    -text
